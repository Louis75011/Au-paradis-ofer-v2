{
  "name": "au-paradis-ofer",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "concurrently -n web,api -c auto \"pnpm -C apps/web dev\" \"pnpm -C apps/api dev\"",
    "dev:web": "pnpm -C apps/web dev",
    "dev:api": "pnpm -C apps/api dev",

    "build": "pnpm -C apps/web build",
    "preview": "pnpm -C apps/web preview",

    "start": "pnpm -C apps/api start",
    "start:api": "pnpm -C apps/api start",

    "lint:web": "pnpm -C apps/web lint",
    "typecheck:web": "pnpm -C apps/web typecheck"
  },
  "devDependencies": {
    "concurrently": "9.1.2"
  }
}
